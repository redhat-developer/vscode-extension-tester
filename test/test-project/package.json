{
	"name": "test-project",
	"displayName": "Test Project",
	"description": "Test Project for VS Code Extension Tester",
	"version": "0.0.1",
	"publisher": "vscode-extension-tester",
	"license": "MIT",
	"repository": "https://github.com/redhat-developer/vscode-extension-tester/test/test-project/",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:fileExplorer",
		"onView:testView",
		"onCommand:extension.helloWorld",
		"onCommand:extension.openFile",
		"onCommand:extension.openFolder",
		"onCommand:extension.closeFolder",
		"onCommand:extension.webview",
		"onCommand:extension.test",
		"onCommand:extension.notification"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "extension.openFile",
				"title": "Open Test File"
			},
			{
				"command": "extension.openFolder",
				"title": "Open Test Folder"
			},
			{
				"command": "extension.closeFolder",
				"title": "Close Test Folder"
			},
			{
				"command": "extension.test",
				"title": "Extension Test Command"
			},
			{
				"command": "extension.webview",
				"title": "Webview Test"
			},
			{
				"command": "extension.notification",
				"title": "Test Notification"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "testView",
					"name": "Test View"
				}
			]
		},
		"configuration": {
			"title": "Test Project",
			"properties": {
				"testProject.general.helloWorld": {
					"type": "boolean",
					"default": false,
					"description": "Hello World!"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "rimraf out && tsc -p ./",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./",
		"ui-test": "npm run compile && extest setup-and-run './out/src/test/**/*test.js' -i",
		"ci-test": "npm run compile && extest setup-and-run './out/src/test/**/*test.js' -u -s ~/test"
	},
	"devDependencies": {
		"@types/chai": "^4.2.6",
		"@types/node": "^8.10.25",
		"@types/vscode": "^1.34.0",
		"chai": "^4.2.0",
		"mocha": "^6.2.0",
		"rimraf": "^3.0.0",
		"tslint": "^5.16.0",
		"typescript": "^3.7.3",
		"vscode-extension-tester": "file:../.."
	}
}
