{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"rootDir": "src",
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"test-resources",
		"src/ui-test/resources/**",
		".test-extensions"
	],
	"include": [
		"src",
		".eslintrc.json"
	]
}
