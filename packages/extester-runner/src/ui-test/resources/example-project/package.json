{
  "name": "extester-runner-ui-tests-project",
  "version": "1.0.0",
  "description": "ExTester Runner UI-TESTS example project",
  "engines": {
    "vscode": "^1.96.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/redhat-developer/vscode-extension-tester.git",
    "directory": "packages/extester-runner/src/ui-test/resources/"
  },
  "license": "Apache-2.0",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run lint",
    "lint": "eslint src",
    "watch": "tsc -watch -p ./",
    "ui-test": "extest setup-and-run './out/ui-test/*.test.js' --code_version max --code_settings settings.json --extensions_dir .test-extensions"
  },
  "dependencies": {
    "vscode-extension-tester": "latest"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2"
  }
}
